<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffff7f">


    <TextView
        android:id="@+id/TVTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:hint="@string/reteta"
        android:text="@string/random"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/RLRecept"
        app:layout_constraintLeft_toLeftOf="@+id/RLRecept" />

    <TextView
        android:id="@+id/TVIngredients"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/reteta"
        android:text="@string/random"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/RLRecept"
        app:layout_constraintTop_toBottomOf="@+id/TVTitle" />

    <RelativeLayout
        android:id="@+id/RLRecept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/IVRecept"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:elevation="2dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/TVIngredients"
        android:background="#888888" />

</android.support.constraint.ConstraintLayout>